{
  "hooks": [
    {
      "event": "PreToolUse",
      "matcher": "Bash",
      "hooks": [
        {
          "type": "script",
          "path": ".claude/hooks/pre-flight-check.sh"
        }
      ]
    },
    {
      "event": "PostToolUse",
      "matcher": "Write|Edit|MultiEdit",
      "hooks": [
        {
          "type": "script",
          "path": ".claude/hooks/checkpoint-commit.sh"
        }
      ]
    },
    {
      "event": "Stop",
      "hooks": [
        {
          "type": "script",
          "path": ".claude/hooks/squash-commits.sh"
        }
      ]
    }
  ],
  "statusLine": {
    "script": ".claude/scripts/han-solo-status.sh"
  },
  "env": {
    "HANSOLO_VERSION": "1.0.0",
    "HANSOLO_MODE": "strict"
  }
}